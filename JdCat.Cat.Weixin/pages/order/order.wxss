.container {
    /* font-size: 35rpx; */
    background-color: #ECECEC;
}

.order {
    width: 100%;
    display: flex;
    flex-direction: column;
    border-bottom: 1px solid #ECECEC;
    background-color: #fff;
    margin-bottom: 20rpx;
}

.order .order-title {
    display: flex;
    flex-flow: row nowrap;
    height: 80rpx;
    align-items: center;
}

.order .order-title .order-code {
    flex-grow: 1;
    align-items: flex-start;
    padding-left: 15rpx;
    /* font-size: 85%; */
    color: #f36c1b;
}

.order .order-title .order-status {
    width: 180rpx;
    /* font-size: 85%; */
    text-align: right;
    padding-right: 20rpx;
    white-space: nowrap;
}

.order .order-product {
    /* margin-left: 80rpx; */
    padding-top: 10rpx;
    padding-right: 20rpx;
    display: flex;
    flex-direction: column;
    font-size: 90%;
    border-top: 1px solid #ECECEC;
    border-bottom: 1px solid #ECECEC;
}

.order .order-product .product {
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    height: 50rpx;
    padding-left: 90rpx;
}

.order .order-total {
    display: flex;
    font-size: 90%;
    height: 80rpx;
    flex-flow: row nowrap;
    justify-content: flex-end;
    padding-right: 20rpx;
}

.order .order-operate {
    display: flex;
    flex-flow: row nowrap;
    padding-right: 20rpx;
    justify-content: flex-end;
    padding-bottom: 20rpx;
}
.order .order-operate button, .no-order button {
    width: 140rpx;
    font-size: 90%;
    border: 1px solid #fdaa8a;
    padding-left: 5rpx;
    padding-right: 5rpx;
    padding-top: 8rpx;
    padding-bottom: 8rpx;
    line-height: 1.4;
    background-color: #fff;
    border-radius: 5rpx;
    margin: 0;
    margin-left: 20rpx;
}

.footer {
    text-align: center;
    padding: 20rpx;
    color: #bbbbbb;
    /* font-size: 80%; */
}
.no-order {
    height: 500rpx;
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: #fff;
}