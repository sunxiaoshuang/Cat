var defaultImageSrc = "/images/logo-2.jpg";
var product = {

    productImage: function (product, businessId, flag) {

        if (!product) return defaultImageSrc;
        if(product.images.length == 0)return defaultImageSrc;
        var src;
        if(flag === "big") {
            src = "http://f.jiandanmao.cn/File/Product/" + businessId + "/400x300/" + product.images[0].name + "." + product.images[0].extensionName;
        } else {
            src = "http://f.jiandanmao.cn/File/Product/" + businessId + "/100x75/" + product.images[0].name + "." + product.images[0].extensionName;
        }

        return src;
    },
    orderProductImage: function(product, businessId){
        if (!product) return defaultImageSrc;
        if(!product.src)return defaultImageSrc;

        return "http://f.jiandanmao.cn/File/Product/" + businessId + "/100x75/" + product.src;
    },
    logoImage: function(url, businessId){
        if(!url)return null;
        return "http://f.jiandanmao.cn/File/Logo/" + businessId + "/" + url; 
    },
    licenseImage: function(url, businessId){
        if(!url)return null;
        return "http://f.jiandanmao.cn/File/License/" + businessId + "/" + url; 
    }
};

module.exports = {
    productImage: product.productImage,
    orderProductImage: product.orderProductImage,
    logoImage: product.logoImage,
    licenseImage: product.licenseImage
};