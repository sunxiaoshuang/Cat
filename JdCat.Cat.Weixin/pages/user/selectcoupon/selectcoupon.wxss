page {
    background-color: #f0f0f0;
    display: flex;
    flex-direction: column;
    /* justify-content: stretch; */
}
.header {
    display: flex;
    /* width: 100%; */
    justify-content: space-around;
    background-color: #fff;
    flex-flow: row nowrap;
    align-items: center;
    border-radius: 10rpx;
    margin: 20rpx;
    padding: 20rpx;
}

.header .title {
    flex-grow: 1;

}

.coupons {
    display: flex;
    flex-direction: column;
}

.header .check {
    /* width: 100rpx; */
}

.coupon {
    display: flex;
    flex-flow: row nowrap;
    justify-content: stretch;
    align-items: center;
    min-height: 200rpx;
    background-color: #fff;
    border-radius: 10rpx;
    margin: 20rpx;
    padding: 20rpx;
}
.coupon .amount {
    display: flex;
    justify-content: center;
    align-items: center;
    color: red;
    height: 100%;
    width: 150rpx;
}
.coupon .description {
    flex-grow: 1;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.coupon .description text {
    white-space: nowrap;
    overflow: hidden;
    font-size: 90%;
}
.coupon .use {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 230rpx;
}
.coupon .use button {
    border: 1px solid #EA7042;
    color: #EA7042;
    font-size: 70%;
}