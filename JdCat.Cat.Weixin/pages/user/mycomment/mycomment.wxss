.container {
    background: #ececec;
    min-height: 1000rpx;
}

.comment {
    background: #fff;
    width: 100%;
    margin-bottom: 20rpx;
}
.comment .store {
    position: relative;
    padding: 20rpx;
    border-bottom: 1px solid #ececec;
}
.comment .score {
    display: flex;
    flex-flow: row nowrap;
}
.score .score-item{
    width: 375rpx;
    display: flex;
    flex-flow: column;
    align-items: center;
}
.score-name {
  color: #777;
  font-size: .9;
}
.score-star {
  width: 100%;
  position: relative;
  height: 50rpx;
}
.score .star {
  position: absolute;
  white-space: nowrap;
  font-size: 34rpx;
  left: 102rpx;
  letter-spacing: 4rpx;
  overflow: hidden;
  margin: 0 auto;
  padding-bottom: 10rpx;
}
.comment-result {
  font-size: 80%;
  margin: 10rpx 0 10rpx 20rpx;
  color: #999;
}
.comment .comment-content {
    display: flex;
    flex-flow: column;
    padding: 10rpx 20rpx;
    font-size: 80%;
    border-top: 1px solid #ececec;
}
.comment .comment-reply {
    padding: 10rpx 40rpx;
    color: #f36c1b;
    font-size: 70%;
}
.comment-reply view {
    padding: 10rpx;
    border: 1px dotted #f36c1b;
    border-radius: 10rpx;
}
.comment .comment-time {
    text-align: right;
    font-size: 85%;
}
.jdcat {
    margin-right: 10rpx;
}