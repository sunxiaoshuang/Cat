
@{
    ViewData["Title"] = "WsService";
}

<h2>WsService</h2>

@section Scripts {
    <script>
        window.onload = function () {
            var ws = new WebSocket("ws://localhost:5003/ws");
            ws.onopen = function () {
                ws.send("好哇好哇");
            };
            ws.onmessage = function (a) { 
                console.log(a)
            }
            ws.onclose = function (e) {
                console.log(e);
            }
            //ws.send("哈哈");

        }
    </script>
}