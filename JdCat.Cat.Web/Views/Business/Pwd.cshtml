@{
    ViewData["Title"] = "商户密码修改";
}

@section Styles {
    <environment include="Development">
        <link href="~/css/business/index.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link href="~/css/business/index.min.css" rel="stylesheet" asp-append-version="true" />
    </environment>

}
@section Scripts {
    <script>
        var pageObj = {
            business: JSON.parse('@Html.Raw(ViewBag.business)')
        };
    </script>
    <environment include="Development">
        <script src="~/js/business/pwd.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/business/pwd.min.js" asp-append-version="true"></script>
    </environment>
}

<div class="mainframe" id="app">
    <div class="container-fluid">
        <div class="row">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <span class="title">@ViewBag.Title</span>
                    </h3>
                </div>
            </div>
            <div class="panel-body form-horizontal">
                <div class="form-group" v-bind:class="{'has-error': !oldPwd}">
                    <label class="control-label col-xs-2 col-md-1  col-xs-offset-1">
                        <span class="require">原始密码</span>
                    </label>
                    <div class=" col-xs-4 col-md-3">
                        <input type="password" class="form-control" v-model.trim="oldPwd" />
                    </div>
                </div>
                <div class="form-group" v-bind:class="{'has-error': !newPwd1}">
                    <label class="control-label col-xs-2 col-md-1 col-xs-offset-1">
                        <span class="require">新密码</span>
                    </label>
                    <div class=" col-xs-4 col-md-3">
                        <input type="password" class="form-control" v-model.trim="newPwd1" />
                    </div>
                </div>
                <div class="form-group" v-bind:class="{'has-error': !newPwd2 || newPwd2 != newPwd1}">
                    <label class="control-label col-xs-2 col-md-1 col-xs-offset-1">
                        <span class="require">再次输入</span>
                    </label>
                    <div class=" col-xs-4 col-md-3">
                        <input type="password" class="form-control" v-model.trim="newPwd2" />
                    </div>
                </div>
            </div>
            <div class="panel-footer text-center col-md-6 col-xs-10" style="background-color: #fff;">
                <div class="kui-button">
                    <button type="button" class="btn btn-primary" style="font-size: 85%; width: 100px" v-on:click="save()">
                        保存
                    </button>
                </div>
                <div class="kui-button">
                    <button type="button" class="btn kui-button-primary" style="width: 100px" v-on:click="ret()">
                        返回
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

