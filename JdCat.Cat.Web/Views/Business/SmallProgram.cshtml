
@{
    ViewData["Title"] = "小程序设置";
}

@section Styles {
    <environment include="Development">
        <link href="~/lib/bootstrap/dist/css/bootstrap-switch.css" rel="stylesheet" />
        <link href="~/css/business/index.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link href="~/lib/bootstrap/dist/css/bootstrap-switch.min.css" rel="stylesheet" />
        <link href="~/css/business/index.min.css" rel="stylesheet" asp-append-version="true" />
    </environment>

}
@section Scripts {
    <environment include="Development">
        <script src="~/js/business/sa.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/business/index.min.js" asp-append-version="true"></script>
    </environment>
}


<div class="mainframe" id="app">
    <div class="container-fluid">
        <div class="row">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <span class="title">商户小程序设置</span>
                    </h3>
                </div>
            </div>
            <div class="panel-body form-horizontal">
                <div class="form-group">
                    <label class="control-label col-xs-2">
                        <span class="require">小程序App Key</span>
                    </label>
                    <div class=" col-xs-5">
                        <input type="text" v-model.trim="entity.appId" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-xs-2">
                        <span class="require">小程序App Secret</span>
                    </label>
                    <div class=" col-xs-5">
                        <input type="text" v-model.trim="entity.secret" class="form-control" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

