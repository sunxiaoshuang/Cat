<div class="row form-horizontal" id="edit-post">
    <div class="form-group">
        <label class="control-label col-xs-3">
            <span class="require">岗位名称：</span>
        </label>
        <div class="col-xs-8">
            <input class="form-control" v-model.trim="name" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-xs-3">
            <span class="require">岗位权限：</span>
        </label>
        <div class="col-xs-9">
            <div class="kui-checkbox checkbox pull-left m-left-md m-right-md margin-right-20" v-for="item in auths">
                <label class="label-checkbox">
                    <input type="checkbox" v-model="item.checked">
                    <span class="custom-checkbox"></span>
                    {{item.name}}
                </label>
            </div>
        </div>
    </div>
</div>