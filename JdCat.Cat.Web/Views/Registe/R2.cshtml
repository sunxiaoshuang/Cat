@{
    ViewBag.Title = "连锁商户注册";
}

@section Styles {

    <environment include="Development">
        <link rel="stylesheet" href="~/css/registe.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/registe.min.css" asp-append-version="true" />
    </environment>
}

@section Scripts {
    <environment include="Development">
        <script src="~/js/r2.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/r2.min.js" asp-append-version="true"></script>
    </environment>
}


<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a asp-area="" asp-controller="Registe" asp-action="Index" class="navbar-brand">
                <span style="font-size:1.3em;">简单猫 |</span>  商家中心
            </a>
        </div>
    </div>
</nav>
<div class="container body-content" id="app">

    <div class="row margin-top-100">
        <div class="registe-container">
            <h4 class="registe-label">总店注册</h4>
            <div class="registeFrame">
                <form class="form-horizontal margin-top-10" v-on:submit.prevent>
                    <div class="input-group">
                        <span class="input-group-addon addon-color">
                            <i class="fa fa-user-circle-o fa-fw"></i>
                        </span>
                        <input class="form-control registe-input" v-model.trim="entity.code" placeholder="登录帐号" />
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon addon-color">
                            <i class="fa fa-key fa-fw"></i>
                        </span>
                        <input class="form-control registe-input" type="password" v-model.trim="entity.password" placeholder="密码" />
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon addon-color">
                            <i class="fa fa-key fa-fw"></i>
                        </span>
                        <input class="form-control registe-input" type="password" v-model.trim="password" placeholder="重复密码" />
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon addon-color">
                            <i class="fa fa-id-badge fa-fw"></i>
                        </span>
                        <input class="form-control registe-input" v-model.trim="entity.name" placeholder="总店名称" />
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon addon-color">
                            <i class="fa fa-user fa-fw"></i>
                        </span>
                        <input class="form-control registe-input" v-model.trim="entity.contact" placeholder="联系人" />
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon addon-color">
                            <i class="fa fa-phone fa-fw"></i>
                        </span>
                        <input class="form-control registe-input" v-model.trim="entity.mobile" placeholder="联系电话" />
                    </div>
                    <div>
                        <button class="btn btn-danger btn-block" @@click="registe">注册</button>
                        <div class="login-div">
                            <i class="fa fa-arrow-left login-i"></i>
                            <a class="login-a" href="/Login">
                                去登陆
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>