@{
    ViewBag.Title = "注册";
}

@section Styles {

    <environment include="Development">
        <link rel="stylesheet" href="~/css/registe.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/registe.min.css" asp-append-version="true" />
    </environment>
}

<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a asp-area="" asp-controller="Registe" asp-action="Index" class="navbar-brand">
                <span style="font-size:1.3em;">简单猫 |</span>  商家中心
            </a>
        </div>
    </div>
</nav>
<div class="container body-content">

    <div class="row margin-top-100">
        <div class="registe-container">
            <h4 class="registe-label">商户注册</h4>
            <div class="registeFrame">
                <form class="form-horizontal margin-top-10">
                    <div class="alert alert-danger hide" id="alert">
                        <i class="fa fa-warning"></i>
                        <span id="alertMsg"></span>
                    </div>
                    <div class="alert alert-success hide" id="info">
                        <i class="fa fa-check-circle"></i>
                        <span id="infoMsg"></span>
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon addon-color">
                            <i class="fa fa-user-circle-o fa-fw"></i>
                        </span>
                        <input class="form-control registe-input" id="txtUser" placeholder="登录帐号" />
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon addon-color">
                            <i class="fa fa-key fa-fw"></i>
                        </span>
                        <input class="form-control registe-input" id="txtPwd" type="password" placeholder="密码" />
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon addon-color">
                            <i class="fa fa-barcode fa-fw"></i>
                        </span>
                        <input class="form-control registe-input" id="txtInvitationCode" placeholder="邀请码" />
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon addon-color">
                            <i class="fa fa-id-badge fa-fw"></i>
                        </span>
                        <input class="form-control registe-input" id="txtName" placeholder="商户名称" />
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon addon-color">
                            <i class="fa fa-phone fa-fw"></i>
                        </span>
                        <input class="form-control registe-input" id="txtPhone" placeholder="手机号码" />
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon addon-color">
                            <i class="fa fa-id-card fa-fw"></i>
                        </span>
                        <input class="form-control registe-input" id="txtLicense" placeholder="营业执照" />
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon addon-color">
                            <i class="fa fa-map-marker fa-fw"></i>
                        </span>
                        <textarea class="form-control registe-input" id="txtAddress" placeholder="地址"></textarea>
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon addon-color">
                            <i class="fa fa-envelope-o fa-fw"></i>
                        </span>
                        <input class="form-control registe-input" id="txtEmail" placeholder="邮箱" />
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon addon-color">
                            <i class="fa fa-sticky-note-o fa-fw"></i>
                        </span>
                        <input class="form-control registe-input" id="txtMark" placeholder="备注" />
                    </div>
                    <div>
                        <button class="btn btn-danger btn-block" id="btnRegiste">注册</button>
                        <div class="login-div">
                            <i class="fa fa-arrow-left login-i"></i>
                            <a class="login-a" href="/Login">
                                登陆
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <environment include="Development">
        <script src="~/js/registe.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/registe.min.js" asp-append-version="true"></script>
    </environment>
}
