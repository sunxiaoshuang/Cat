<div class="form-horizontal" id="createVue">
    <div class="form-group" v-bind:class="{'has-error': (showError && !entity.name)}">
        <label class="control-label col-xs-3">
            <span class="require">门店名称：</span>
        </label>
        <div class="col-xs-8">
            <input class="form-control" v-model.trim="entity.name" />
        </div>
    </div>
    <div class="form-group" v-bind:class="{'has-error': (showError && !entity.code)}">
        <label class="control-label col-xs-3">
            <span class="require">登录帐号：</span>
        </label>
        <div class="col-xs-8">
            <input class="form-control" v-model.trim="entity.code" />
        </div>
    </div>
    <div class="form-group" v-bind:class="{'has-error': (showError && !entity.password)}">
        <label class="control-label col-xs-3">
            <span class="require">登录密码：</span>
        </label>
        <div class="col-xs-8">
            <input class="form-control" type="password" v-model.trim="entity.password" />
        </div>
    </div>
    <div class="form-group" v-bind:class="{'has-error': (showError && !password)}">
        <label class="control-label col-xs-3">
            <span class="require">重复密码：</span>
        </label>
        <div class="col-xs-8">
            <input class="form-control" type="password" v-model.trim="password" />
        </div>
    </div>
    <div class="form-group" v-bind:class="{'has-error': (showError && !entity.contact)}">
        <label class="control-label col-xs-3">
            <span class="require">联系人：</span>
        </label>
        <div class="col-xs-8">
            <input class="form-control" v-model.trim="entity.contact" />
        </div>
    </div>
    <div class="form-group" v-bind:class="{'has-error': (showError && !entity.mobile)}">
        <label class="control-label col-xs-3">
            <span class="require">联系电话：</span>
        </label>
        <div class="col-xs-8">
            <input class="form-control" v-model.trim="entity.mobile" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-xs-3">
            <span class="require">所在城市：</span>
        </label>
        <div class="col-xs-8">
            <select class="businessTime" v-model.trim="entity.province" style="min-width: 100px;">
                <option v-for="item in province" :value="item" v-text="item"></option>
            </select>
            <select class="businessTime" v-model.trim="entity.city" style="min-width: 100px;">
                <option v-for="item in city" :value="item" v-text="item"></option>
            </select>
            <select class="businessTime" v-model.trim="entity.area" style="min-width: 100px;">
                <option v-for="item in area" :value="item" v-text="item"></option>
            </select>
        </div>
    </div>
</div>
