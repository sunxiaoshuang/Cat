@using JdCat.Cat.Common
@model TangOrder

<div class="form-horizontal">
    <div class="form-group">
        <label class="col-xs-2">
            订单编号：
        </label>
        <span class="col-xs-4">
            @Model.Code
        </span>
        <label class="col-xs-2">
            当日流水：
        </label>
        <span class="col-xs-3">
            @Model.Identifier
        </span>
    </div>
    <div class="form-group">
        <label class="col-xs-2">
            餐桌：
        </label>
        <span class="col-xs-4">
            @Model.DeskName
        </span>
        <label class="col-xs-2">
            用餐人数：
        </label>
        <span class="col-xs-3">
            @Model.PeopleNumber
        </span>
    </div>
    <div class="form-group">
        <label class="col-xs-2">
            结算时间：
        </label>
        <span class="col-xs-4">
            @(Model.PayTime?.ToString("yyyy-MM-dd HH:mm:ss"))
        </span>
        <label class="col-xs-2">
            支付方式：
        </label>
        <span class="col-xs-3">
            @if (Model.TangOrderPayments != null)
            {
                if (Model.TangOrderPayments.Count == 1)
                {
                    <span>@Model.TangOrderPayments.First().Name</span>
                }
                else
                {
                    <span>@string.Join(',', Model.TangOrderPayments.Select(a => $"{a.Name}:{a.Amount}元"))</span>
                }
            }
        </span>
    </div>
    <div class="form-group">
        <label class="col-xs-2">
            订单来源：
        </label>
        <span class="col-xs-4">
            @Model.OrderSource.ToDescription();
        </span>
        <label class="col-xs-2">
            订单类别：
        </label>
        <span class="col-xs-3">
            @Model.OrderMode.ToDescription()
        </span>
    </div>
    <div class="form-group">
        <label class="col-xs-2">
            收银员：
        </label>
        <span class="col-xs-4">
            @Model.StaffName
        </span>
        <label class="col-xs-2">
            订单状态：
        </label>
        <span class="col-xs-3">
            @Model.OrderStatus.ToDescription()
        </span>
    </div>
    <div class="form-group">
        <label class="col-xs-2">
            订单备注：
        </label>
        <span class="col-xs-4">
            @Model.Remark
        </span>
        <label class="col-xs-2">
            支付备注：
        </label>
        <span class="col-xs-3">
            @Model.PaymentRemark
        </span>
    </div>
    @if (!string.IsNullOrEmpty(Model.CancelReason))
    {
        <div class="form-group">
            <label class="col-xs-2">
                退款原因：
            </label>
            <span class="col-xs-8">
                @Model.CancelReason
            </span>
        </div>
    }
    <div class="form-group">
        <label class="col-xs-2 nowarp">
            商品原价总额：
        </label>
        <span class="col-xs-4">
            ￥ @(Model.OriginalAmount - Model.MealFee)
        </span>
        <label class="col-xs-2">
            餐位费：
        </label>
        <span class="col-xs-3">
            ￥ @Model.MealFee
        </span>
    </div>
    @*<div class="form-group">
            <label class="col-xs-2 nowarp">
                单品折扣立减：
            </label>
            <span class="col-xs-4">
                ￥ @(Model.OriginalAmount - Model.Amount)
            </span>
            <label class="col-xs-2 nowarp">
                整单折扣立减：
            </label>
            <span class="col-xs-3">
                ￥ @(Model.Amount - Model.ActualAmount - Model.PreferentialAmount)
            </span>
        </div>*@
    <div class="form-group">
        @*<label class="col-xs-2 nowarp">
                整单优惠立减：
            </label>
            <span class="col-xs-4">
                ￥ @Model.PreferentialAmount
            </span>*@
        <label class="col-xs-2">
            订单原价：
        </label>
        <span class="col-xs-4">
            ￥ @Model.OriginalAmount
        </span>
        <label class="col-xs-2">
            订单实收：
        </label>
        <span class="col-xs-3" style="color: red;">
            ￥ @Model.ActualAmount
        </span>
    </div>
    <div class="form-group">
        <div class="col-xs-11">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>商品名称</th>
                        <th>规格描述</th>
                        <th>备注</th>
                        <th width="80">总价</th>
                        <th width="80">数量</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.TangOrderProducts)
                    {
                        <tr>
                            <td>
                                @item.Name
                                @if (item.ProductStatus == TangOrderProductStatus.Return)
                                {
                                    <span class="text-danger">（已退菜）</span>
                                }
                            </td>
                            <td>@item.Description</td>
                            <td>@item.Remark</td>
                            <td>@(Convert.ToDouble((item.Price * item.Quantity).ToString("f2")))</td>
                            <td>@item.Quantity</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    @if (Model.TangOrderActivities != null && Model.TangOrderActivities.Count > 0)
    {
        <div class="form-group">
            <div class="col-xs-6">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>活动名称</th>
                            <th>优惠金额</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.TangOrderActivities)
                        {
                            <tr>
                                <td>
                                    @item.Remark
                                </td>
                                <td><i class="fa fa-rmb"> @item.Amount</i></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>



