@{
    ViewData["Title"] = "创建订单";
}

@section Scripts {
    <script>
        new Vue({
            el: "#app",
            data: {
                entity: {
                    price: 54,
                    receiverName: "王五",
                    receiverAddress: "武汉市汉阳区龙阳时代",
                    phone: "13555248874",
                    remark: ""
                }
            },
            methods: {
                submit: function () {
                    axios.post("/Test2/CreateOrder", this.entity)
                        .then(function (res) {
                            if (res.data.success) {
                                $.alert("操作成功", "success");
                            } else {
                                $.alert(res.data.msg);
                            }
                        })
                        .catch(function (err) {
                            $.alert(err);
                        });
                }
            }
        });
    </script>
}

<div class="mainframe" id="app">
    <div class="container-fluid">
        <div class="row">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <span class="title">创建测试订单</span>
                    </h3>
                </div>
            </div>
            <div class="panel-body form-horizontal">
                <div class="form-group">
                    <label class="control-label col-xs-2 col-md-1  col-xs-offset-1">
                        订单金额：
                    </label>
                    <div class="col-xs-4 col-md-3">
                        <input type="text" class="form-control" v-model="entity.price" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-xs-2 col-md-1  col-xs-offset-1">
                        收货人姓名：
                    </label>
                    <div class="col-xs-4 col-md-3">
                        <input type="text" class="form-control" v-model="entity.receiverName" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-xs-2 col-md-1  col-xs-offset-1">
                        收货人地址：
                    </label>
                    <div class="col-xs-4 col-md-3">
                        <input type="text" class="form-control" v-model="entity.receiverAddress" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-xs-2 col-md-1  col-xs-offset-1">
                        收货人手机号：
                    </label>
                    <div class="col-xs-4 col-md-3">
                        <input type="text" class="form-control" v-model="entity.phone" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-xs-2 col-md-1 col-xs-offset-1">
                        备注：
                    </label>
                    <div class="col-xs-4 col-md-3">
                        <input type="text" class="form-control" v-model="entity.remark" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-4 col-md-3 col-xs-offset-2 col-md-offset-2">
                        <div class="kui-button">
                            <button type="button" class="btn btn-primary" v-on:click="submit()">
                                确定
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
