    <input id="mr_employeeId" value="" type="hidden" />
    <input id="mr_terminalId" value="" type="hidden" />
    <input id="rechargeLimit" value="0" type="hidden">
    <input id="coreRechargeStatus" value="1" type="hidden" />
    <script src="~/js/member/app.js"></script>
    <script src="~/js/member/jquery-weui.min.js"></script>

    <script>
        var recharge_rules = [];
        var card_recharge_rules = {};
        $('#topval').on('blur', function () { setTimeout(function () { window.scrollTo(0, 0) }, 100) })
    </script>
    <script src="~/js/member/recharge.js" asp-append-version="true"></script>
</body>
</html>